<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_gradient"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#E9F7F5"
                android:padding="10dp">

                <TextView

                    android:id="@+id/textViewNameId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/back_gradient"
                    android:gravity="center"
                    android:lineSpacingExtra="8sp"
                    android:text="Md. Asraf Uzzaman"
                    android:textColor="#FFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/textViewCityIdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewNameId"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="98dp"
                    android:layout_marginRight="98dp"
                    android:text="Location : Sylhet"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewBloodId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewCityIdd"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="126dp"
                    android:layout_marginLeft="126dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="127dp"
                    android:layout_marginRight="127dp"
                    android:background="@drawable/slide_style"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="A+"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/textViewPhoneId"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewNameId"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="91dp"
                    android:layout_marginLeft="91dp"
                    android:layout_marginTop="199dp"
                    android:layout_marginEnd="83dp"
                    android:layout_marginRight="83dp"
                    android:background="#C2185B"
                    android:gravity="center"
                    android:text="Call: 017787346540"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewAddressId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewNameId"
                    android:layout_alignBottom="@+id/textViewPhoneId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="109dp"
                    android:layout_marginBottom="66dp"
                    android:text="Donate Location: Osmani Medical College"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewNameId"
                    android:layout_alignBottom="@+id/textViewPhoneId"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="159dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="37dp"
                    android:text="Status: Con't Donate Now."
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>