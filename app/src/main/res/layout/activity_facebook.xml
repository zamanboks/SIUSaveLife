<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fb"
    tools:context=".FacebookActivity">

    <EditText
        android:textCursorDrawable="@null"
        android:id="@+id/fbUsername"
        android:layout_width="294dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="356dp"
        android:background="#3b5998"
        android:hint="Email or Phone"
        android:textColorHint="#EBE7E7"
        android:textSize="20sp"
        >
    <requestFocus />
</EditText>


    <View
        android:id="@+id/UnderLine"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_below="@+id/fbUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#FFF" />

    <EditText

        android:textCursorDrawable="@null"
        android:id="@+id/fbPassword"
        android:layout_width="307dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="308dp"
        android:background="#3b5998"
        android:hint="Password"
        android:textColorHint="#EBE7E7"
        android:textSize="20sp">

        <requestFocus />
    </EditText>
    <View
        android:id="@+id/UnderLinepassword"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_below="@+id/fbPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#FFF" />

    <TextView
        android:id="@+id/fbLogin"
        android:layout_width="294dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="243dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fbExtra"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="38dp"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressbarfb"
        android:layout_width="66dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="149dp"
        android:layout_marginRight="149dp"
        android:layout_marginBottom="146dp"
        android:indeterminateTint="#D3CDCD"
        android:visibility="gone"
 />

</RelativeLayout>